<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database Connection Settings -->
        <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:orcl</property>
        <property name="hibernate.connection.username">Loris</property>
        <property name="hibernate.connection.password">Password98</property>

        <!-- Hibernate Properties -->
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle12cDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- C3P0 Connection Pool Configuration -->
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>

        <!-- Entity Classes -->
        <mapping class="model.classes.Dough"/>
        <mapping class="model.classes.Employee"/>
        <mapping class="model.classes.MeatBase"/>
        <mapping class="model.classes.OptionalElements"/>
        <mapping class="model.classes.Piadina"/>
        <mapping class="model.classes.Sauces"/>
    </session-factory>
</hibernate-configuration>